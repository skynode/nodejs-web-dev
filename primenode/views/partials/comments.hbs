<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-ttile">
			latest comments
		</h3>
	</div>
	<div class="panel-body">
		<ul class="media-list">
			{{#each sidebar.comments}}
				<li class="media">
					<a class="pull-left" href="/images/{{image.uniqueId}}">
						<img src="/piblic/upload/{{image.filename}}"
						 class="media-object" width="45" height="45">
					</a>
					<div class="media-body">
						{{comment}}<br/>
						<strong class="media-heading">{{name}}</strong>
						<small class="text-muted">{{timeago timestamp}}</small>
					</div>
				</li>
			{{/each}}
		</ul>
	</div>
</div>